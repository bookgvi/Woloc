body
  font-weight 500
  color #4A4A4A
  width 100vw
  height 100vh
  position relative
  display block
  &::after
    content ''
    //  background url("/statics/maket.jpg")
    opacity .1
    top 0
    left 0
    bottom 0
    right 0
    position absolute
    z-index -1
a
  color #4A4A4A
  text-decoration none
thead tr:first-child th
  font-weight 600
#context-menu
  box-shadow none
.w-75em
  width 75em
#context-menu:hover tr
  background grey

.wrapper
  width 1280px
  margin 44px auto
  overflow hidden
  padding 0 20px
  &--header
    padding 0
  &--zero
    margin -5px auto
  &--plus
    margin 66px auto
  &--minus
    margin -40px auto

.data-table
  tbody tr td
    height 50px
    padding 0 12px
  .header
    background $grey-2
    text-transform: uppercase
    color $grey-7
    font-weight bold
    padding 0 12px
  .q-table__top
    padding-left: 0
    padding-right: 0
.btn-filter
  font-size .9rem
  min-height 1.5em
  padding: 2px 8px

@media (min-width $breakpoint-lg-min)
  .q-header, .q-footer
    .q-tab__content
      min-width auto
